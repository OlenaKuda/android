<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView android:id="@+id/year_of_birth_question"
              android:layout_width="180dp"
              android:layout_height="35dp"
              android:text="@string/type_tour_age"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintHorizontal_bias="0.5"
              android:layout_marginTop="116dp"
              android:autoSizeTextType="uniform"
              android:textColor="@color/colorPrimary"
              android:gravity="center"
              android:textSize="20sp"
              android:textStyle="bold"/>

     <EditText android:id="@+id/input_year_of_birth"
               android:layout_width="180dp"
               android:layout_height="50dp"
               app:layout_constraintTop_toBottomOf="@id/year_of_birth_question"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.5"
               android:autoSizeTextType="uniform"
               android:layout_marginTop="30dp"
               android:textColor="@color/colorPrimary"
               android:gravity="center"
               android:textSize="20sp"
               android:textStyle="bold"/>

    <TextView android:id="@+id/output_age"
              android:layout_width="180dp"
              android:layout_height="35dp"
              tools:text="Your Age: "
              android:textColor="@color/colorPrimary"
              app:layout_constraintTop_toBottomOf="@id/input_year_of_birth"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.5"
              android:layout_marginTop="30dp"
              android:gravity="center"
              android:textSize="20sp"
              android:textStyle="bold"/>

    <Button android:id="@+id/calculate_button"
            android:layout_width="183dp"
            android:layout_height="50dp"
            android:text="@string/calculate"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/output_age"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold" app:layout_constraintHorizontal_bias="0.495"/>


</androidx.constraintlayout.widget.ConstraintLayout>
